<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário de Cadastro e Login</title>
    @Styles.Render("~/Content/CheckoutStyle.css")
    <style id="local-styles">
        input {
            width: 100% !important;
            padding: 10px !important;
            border: none !important;
            border-bottom: 2px solid #000 !important;
            outline: none !important;
            color: black !important;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <h2>1.Envio</h2>
        </div>
        <div class="col-md-1">
            <h2>></h2>
        </div>
        <div class="col-md-3">
            <h2>2.Forma de Pagamento > </h2>
        </div>
        <div class="col-md-1">
            <h2>></h2>
        </div>
        <div class="col-md-3">
            <h2>3.Confirmação</h2>
        </div>
        <div class="col-md-1">
        </div>
    </div>
    <div class="row" style="padding: 5% 10% 0 10%">
        <div class="col-md-6">
            <div class="container">
        
                <div class="form-container">

                    <form id="endereco-form" class="active">
                        <h2>Endereço de Entrega</h2>

                        <div class="">
                            <input type="text" id="nome" placeholder="Nome Completo">
                        </div>

                        <div class="row">
                            <div class="input-container col-md-6">
                                <input type="text" id="cep" placeholder="CEP">
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="submit-button" style="width: 90%">VALIDAR</button>
                            </div>
                        </div>

                        <div class="">
                            <input type="text" id="endereco" placeholder="Endereço">
                        </div>
                        <div class="">
                            <input type="text" id="cidade" placeholder="Cidade">
                        </div>
                        <div class="">
                            <input type="text" id="telefone" placeholder="Número do Telefone">
                        </div>
                        <div class="">
                            <input type="text" id="cpf" placeholder="CPF">
                        </div>

                        <button type="" class="submit-button col-auto" onclick="showForm('pagamento-form')" style="width: 100%">Confirmar</button>
                    </form>

                    <form id="pagamento-form">
                        <h2>Cartão de Crédito</h2>

                        <div class="">
                            <input type="text" id="nome-cartao" placeholder="Nome completo do titular do cartão">
                        </div>

                        <div class="">
                            <input type="text" id="numero-cartao" placeholder="Número do Cartão">
                        </div>
                        <div class="row">
                            <div class="input-container col-md-6">
                                <input type="text" id="validade" placeholder="MM / AA">
                            </div>
                            <div class="col-md-6">
                                <input type="text" id="cvv" placeholder="CVV / CVC">
                            </div>
                        </div>

                        <button type="submit" class="submit-button col-auto" onclick="showForm('confirmacao-form')" style="width: 100%">Confirmar</button>
                    </form>

                    <form id="confirmacao-form">

                        <h2>Endereço</h2>
                        <ul>
                            <li>

                            </li>
                        </ul>

                        <button type="submit" class="submit-button col-auto" style="width: 100%">Confirmar</button>
                    </form>

                    @*<div class="options">
                        <a href="#" class="active" onclick="showForm('endereco-form')">ENTRAR</a>
                        <a href="#" onclick="showForm('pagamento-form')">CADASTRAR</a>
                    </div>*@
                </div>
            </div>

        </div>


        <div class="col-md-6 row d-flex justify-content-center" style="align-items: center !important; flex-direction: column !important">
            @for (int i = 1; i <= 2; i++)
            {
                <div class="col-md-4" >
                    <div class="product text-center">
                        <img src="~/Content/Image/Test/Gucci-Tshirt.jpg" alt="Produto" width="180" height="240" class="mx-auto my-3">
                        <h4>Nome do Produto</h4>
                        <p>Preço: $99.99</p>
                    </div>
                </div>
            }
        </div>

    </div>



    <script src="~/Scripts/LoginScript.js"></script>
</body>
</html>